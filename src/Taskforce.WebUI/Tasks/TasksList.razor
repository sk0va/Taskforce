@page "/tasks"
@using Taskforce.Db.Tasks
@using Taskforce.WebUI.Components

@inject IEntityQuery<Taskforce.Domain.Tasks.Task> query

<PageTitle>Tasks</PageTitle>

@if(tasks == null)
{
    <p><em>Loading...</em></p>
}else{
    <div calss="container mb-3">
        <NavButton Subclass="primary" TargetUri="@($"/tasks/add")"> New </NavButton>
        <NavButton Subclass="outline-dark" TargetUri="tasks"> Back to Tasks </NavButton>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DueDate</th>
                <th>CompletedDate</th>
                <th>IsTemplate</th>
                <th>Title</th>
                <th>Description</th>
                <th>State</th>
                <th>IsDeleted</th>
                <th>CreatedDate</th>
                <th>UpdatedDate</th>
                <th>DeletedDate</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var t in tasks)
            {
                var href = $"tasks/{t.Id}";
                <tr>
                    <NavLink class="nav-link" href="@href">
                        <td>@t.Id</td>
                    </NavLink>
                    <td>@t.DueDate</td>
                    <td>@t.CompletedDate</td>
                    <td>@t.IsTemplate</td>
                    <td>@t.Title</td>
                    <td>@t.Description</td>
                    <td>@t.State</td>
                    <td>@t.IsDeleted</td>
                    <td>@t.CreatedDate</td>
                    <td>@t.UpdatedDate</td>
                    <td>@t.DeletedDate</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Taskforce.Domain.Tasks.Task[] tasks;

    protected override async System.Threading.Tasks.Task OnInitializedAsync()
    {
        tasks = (await query.GetListAsync(new TaskSpecification(), default)).ToArray();
    }
}
