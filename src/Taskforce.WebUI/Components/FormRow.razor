<div class="row mb-3">
    <label for="@Id" class="col-sm-2 col-form-label">@Label</label>
    <div class="col-sm-10">
        @ChildContent
    </div>
</div> 


@code {
    [Parameter]
    public string Label { get; set; }

    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
